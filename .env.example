# Flux API Server Configuration
# Copy this to .env and fill in your values

# API Key for authentication (required for production)
# Generate a secure random key, e.g.: python -c "import secrets; print(secrets.token_urlsafe(32))"
FLUX_API_KEY=your-secret-api-key-here

# Server settings
FLUX_PORT=7860
FLUX_HOST=0.0.0.0

# GPU selection (0=RTX 5090, 1=RTX 3090)
FLUX_GPU_ID=0

# Maximum number of requests in queue (returns 503 if exceeded)
FLUX_MAX_QUEUE=10

# Directory for saved images when using response_format="file"
FLUX_OUTPUT_DIR=./generated

# LoRA directory - allows using just filename instead of full path
# Example: FLUX_LORA_DIR=E:\path\to\loras
FLUX_LORA_DIR=
